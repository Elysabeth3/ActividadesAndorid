<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi primera aplicacÃ­on en Android"
        android:textSize="40sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textColor="#FF0000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce los siguientes datos:"
        android:textSize="20sp"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFB"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/txtNombre"
            android:text="Nombre:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="337dp"
            android:hint="Introduzca el nombre"
            android:maxLength="40" />

        <TextView
            android:id="@+id/txtClave"
            android:text="Clave:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextClave"
            android:layout_width="335dp"
            android:hint="Introduce la clave"
            android:maxLength="12"
            android:inputType="textPassword"/>
    </GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETEAR"
        android:layout_gravity="right">
    </Button>
</LinearLayout>